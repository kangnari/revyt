<% provide(:title, 'Sign up') %>
<h1> Sign up </h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(@user) do |f| %>
			<%= f.text_field :name, class: "input-xlarge", placeholder: "Name" %>
			<%= f.text_field :email, type: "email", class: "input-xlarge", placeholder: "Email" %>
			<%= f.password_field :password, type: "text", class: "input-xlarge", placeholder: "Password" %>
			<%= f.password_field :password_confirmation, type: "text", class: "input-xlarge", placeholder: "Password Confirmation" %>

			<%= f.submit "Get me started!", class: "btn btn-large" %>
		<%end%>
	</div>	
</div>